    } else if (typeof result === 'number') {
      recordCount = result;
    } else if (result && typeof result === 'object') {
      recordCount = 1;
    }

    const averageTimePerRecord =
      recordCount > 0 ? Number((executionTime / recordCount).toFixed(4)) : 0;

