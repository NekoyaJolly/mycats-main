{
  "name": "cat-management-system",
  "version": "1.0.0",
  "description": "猫生体管理システム",
  "private": true,
  "workspaces": [
    "backend",
    "cat-ui-test"
  ],
  "packageManager": "npm@11.4.2",
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "// === 開発環境 ===": "",
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd cat-ui-test && npm run dev",
    "// === Docker開発環境 ===": "",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:logs": "docker-compose logs -f",
    "docker:shell": "docker-compose exec app bash",
    "// === ビルド ===": "",
    "build": "npm run build:all",
    "build:all": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=cat-ui-test",
    "// === 依存関係インストール ===": "",
    "install:all": "npm install --workspaces --include-workspace-root",
    "install:backend": "npm install --workspace=backend",
    "install:frontend": "npm install --workspace=cat-ui-test",
    "// === データベース管理 ===": "",
    "db:generate": "cd backend && npx prisma generate",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:migrate:prod": "cd backend && npx prisma migrate deploy",
    "db:seed": "cd backend && npm run seed",
    "db:studio": "cd backend && npx prisma studio",
    "db:reset": "cd backend && npx prisma migrate reset",
    "db:dev": "npm run db:generate && npm run db:migrate",
    "db:reset-dev": "npm run db:reset && npm run db:generate",
    "// === テスト ===": "",
    "test": "npm run test:all",
    "test:all": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=cat-ui-test",
    "// === フォーマット・リント ===": "",
    "format": "npm run format:all",
    "format:all": "npm run format:backend && npm run format:frontend",
    "format:backend": "prettier --write \"backend/src/**/*.{ts,js}\"",
    "format:frontend": "prettier --write \"cat-ui-test/src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "npm run format:check:all",
    "format:check:all": "npm run format:check:backend && npm run format:check:frontend",
    "format:check:backend": "prettier --check \"backend/src/**/*.{ts,js}\"",
    "format:check:frontend": "prettier --check \"cat-ui-test/src/**/*.{ts,tsx,js,jsx}\"",
    "// === クリーンアップ ===": "",
    "clean": "npm run clean:all",
    "clean:all": "npm run clean:modules && npm run clean:dist",
    "clean:modules": "npx rimraf node_modules backend/node_modules cat-ui-test/node_modules",
    "clean:dist": "npx rimraf backend/dist cat-ui-test/.next",
    "// === 環境セットアップ ===": "",
    "setup": "npm install && npm run install:all && npm run db:generate",
    "setup:fresh": "npm run clean && npm run setup && npm run db:migrate",
    "// === Git フック ===": "",
    "prepare": "node -e \"if (!process.env.CI) require('child_process').execSync('husky',{stdio:'inherit'})\"",
    "// === テスト・品質管理 ===": "",
    "test:integration": "npm run test:integration --workspace=backend",
    "test:e2e": "npm run test:e2e --workspace=backend",
    "perf:test": "npm run perf:test --workspace=backend",
    "// === クロスプラットフォーム対応 ===": "",
    "setup:init": "bash scripts/setup.sh",
    "dev:script": "bash scripts/dev.sh",
    "// === デバッグ ===": "",
    "dev:debug": "cross-env DEBUG=* npm run dev",
    "backend:debug": "cd backend && cross-env DEBUG=* npm run start:dev",
    "frontend:debug": "cd cat-ui-test && cross-env DEBUG=* npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.2"
  }
}
